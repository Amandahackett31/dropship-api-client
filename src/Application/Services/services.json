{
	"name": "Kole Imports API Client",
	"base_url": "https://api.koleimports.com",
	"description": "Dropship API Product Service",
	"operations": {
		"GetProducts": {
	            "httpMethod": "GET",
	            "uri": "/products",
	           	"summary": "Gets a list of Products",
	           	"responseClass": "GetProductsOutput"
	      		},
		"GetProduct": {
	            "httpMethod": "GET",
	            "uri": "/products/{sku}",
	           	"summary": "Get specified product",
	           	"responseClass": "GetProductOutput",
			"parameters":{
				"sku":{
					"location":"uri",
					"description":"Product to retrieve by sku",
					"required":"true"
					}
				}
	      	},
		"GetAccounts": {
	            "httpMethod": "GET",
	            "uri": "/accounts",
	           	"summary": "Gets a list of Accounts",
	           	"responseClass": "GetAccountsOutput"
	      	},
		"GetOrders": {
	            "httpMethod": "GET",
	            "uri": "/orders",
	           	"summary": "Gets a list of orders",
	           	"responseClass": "GetOrdersOutput"
	      	},
		"GetOrder": {
	            "httpMethod": "GET",
	            "uri": "/orders/{order_id}",
	           	"summary": "Get get specific order",
	           	"responseClass": "GetOrderOutput",
			"parameters":{
				"order_id":{
					"location":"uri",
					"description":"Order to retrieve by order_id",
					"required":"true"
					}
				}
			},
		"PostOrder": {
	            "httpMethod": "POST",
	            "uri": "/orders",
			"headers":{
			"Content-Type":"application/vnd.koleimports.ds.order+xml",
			"Accept":"application/vnd.koleimports.ds.order+xml"
			},
	           	"summary": "Create an order",
	           	"responseClass": "PostOrderOutput",
			"parameters":{
				"order":{
					"type":"array",
					"location":"json"
				},
				"po_number":{
					"location":"json",
					"type":"string"
				},
				"notes":{
					"location":"json",
					"type":"string"
				},
				"shipping_options":{
					"type":"array",
					"location":"json"
				},
				"carrier":{
					"location":"json",
					"type":"string"
				},
				"service":{
					"location":"json",
					"type":"string"
				},
				"signature":{
					"location":"json",
					"type":"string"
				},
				"instructions":{
					"location":"json",
					"type":"string"
				},
				"ship_to_address":{
					"type":"array",
					"location":"json"
				},
				"first_name":{
					"location":"json",
					"type":"string"
				},
				"last_name":{
					"location":"json",
					"type":"string"
				},
				"comany":{
					"location":"json",
					"type":"string"
				},
				"address_1":{
					"location":"json",
					"type":"string"
				},
				"address_2":{
					"location":"json",
					"type":"string"
				},
				"city":{
					"location":"json",
					"type":"string"
				},
				"state":{
					"location":"json",
					"type":"string"
				},
				"zipcode":{
					"location":"json",
					"type":"string"
				},
				"ext_zipcode":{
					"location":"json",
					"type":"string"
				},
				"country":{
					"location":"json",
					"type":"string"
				},
				"phone":{
					"location":"json",
					"type":"string"
				},
				"items":{
					"type":"array",
					"location":"json"
				},
				"item":{
					"type":"array",
					"location":"json"
				},
				"sku":{
					"location":"json",
					"type":"string"
				},
				"quantity":{
					"location":"json",
					"type":"string"
				}
			}
		},
		"models": {
			"GetProductsOutput": {
				"type": "array"
			},
	        "PostOrderOutput": {
	            "type": "object",
	            "properties": {
		                "location": {
		                    "location": "body",
		                    "sentAs": "createOrder",
		                    "type": "string"
		                },
		                "uri": {
		                    "location": "json",
		                    "type": "string"
		            	}
	            	}
	      	}
		}
	}
}
