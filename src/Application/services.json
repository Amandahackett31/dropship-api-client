{
	"name": "Kole Imports API Client",
	"base_url": "https://api.koleimports.com",
	"description": "Dropship API Product Service",
	"operations": {
		"GetProducts": {
	            "httpMethod": "GET",
	            "uri": "/products",
	           	"summary": "Gets a list of Products",
	           	"responseClass": "GetProductsOutput"
	      		},
		"GetProduct": {
	            "httpMethod": "GET",
	            "uri": "/products/{sku}",
	           	"summary": "Get specified product",
	           	"responseClass": "GetProductOutput",
			"parameters":{
				"sku":{
					"location":"uri",
					"description":"Product to retrieve by sku",
					"required":"true"
					}
				}
	      	},
		"GetAccounts": {
	            "httpMethod": "GET",
	            "uri": "/accounts",
	           	"summary": "Gets a list of Accounts",
	           	"responseClass": "GetAccountsOutput"
	      	},
		"GetOrders": {
	            "httpMethod": "GET",
	            "uri": "/orders",
	           	"summary": "Gets a list of orders",
	           	"responseClass": "GetOrdersOutput"
	      	},
		"GetOrder": {
	            "httpMethod": "GET",
	            "uri": "/orders/{order_id}",
	           	"summary": "Get get specific order",
	           	"responseClass": "GetOrderOutput",
			"parameters":{
				"order_id":{
					"location":"uri",
					"description":"Order to retrieve by order_id",
					"required":"true"
					}
				}
			},
		"CreateOrder": {
	            "httpMethod": "POST",
	            "uri": "/orders",
	           	"summary": "Create an order",
	           	"responseClass": "CreateOrderOutput",
			"parameters":{
				//order
			"order":{
				"type":"array",
				"location":"xml",
				"params":{
					"po_number":{
						"location":"xml",
						"type":"integer",
						"required":"false"
					},
					"notes":{
						"location":"xml",
						"type":"string",
						"required":"false"
					},
					 //shipping_options
						"shipping_options":{
							"type":"array",
							"location":"xml",
							"params":{
								"carrier":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"service":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"signature":{
									"location":"xml",
									"type":"string",
									"required":"false"
								},
								"instructions":{
									"location":"xml",
									"type":"string",
									"required":"false"
								}
							}
						},
						//ship_to_address
						"ship_to_address":{
							"type":"array",
							"location":"xml",
							"params":{
								"first_name":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"last_name":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"comany":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"address_1":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"address_2":{
									"location":"xml",
									"type":"string",
									"required":"false"
								},
								"city":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"state":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"zipcode":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"ext_zipcode":{
									"location":"xml",
									"type":"string",
									"required":"false"
								},
								"country":{
									"location":"xml",
									"type":"string",
									"required":"true"
								},
								"phone":{
									"location":"xml",
									"type":"string",
									"required":"false"
								}
							}
						},
						//items
						"items":{
						"type":"array",
						"location":"xml",
							"params":{
								//item
								"item":{
									"type":"array",
									"location":"xml",
									"params":{
										"sku":{
											"location":"xml",
											"type":"string",
											"required":"true"
										},
										"quantity":{
											"location":"xml",
											"type":"integer",
											"required":"true"
										}
									}
								}//END item
							}
						}//END items
					}
				}//End order
			}//END CreateOrder Perameters
		},//END CreateOrder
		"models": {
			"GetProductsOutput": {
				"type": "object"
			},
			"CreateOrderOutput":{
				"type":"object"
			}
		}
	}
}
